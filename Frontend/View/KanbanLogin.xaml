<UserControl x:Class="Frontend.View.KanbanLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Frontend.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewModel:LoginViewModel}"
             mc:Ignorable="d"
             Height="570" Width="822"
             Background="LightSlateGray">

    <Grid>

        <!-- validation / error message -->
        <TextBlock Text="{Binding Message}"
                   Foreground="Red"
                   FontWeight="Bold"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,60,0,0"/>

        <!-- “Don’t have an account?” footer -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,414,0,116">
            <TextBlock Text="Don't have an account?"
                       FontSize="14"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
            <Button Content="Register"
                    Command="{Binding RegisterNavCommand}"
                    Background="Transparent"
                    Foreground="Wheat"
                    FontSize="14"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- login card -->
        <Border Background="White"
                BorderBrush="#FFA7A8A9"
                BorderThickness="2"
                CornerRadius="8"
                Padding="30"
                Width="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,87,0,0">

            <StackPanel HorizontalAlignment="Center">

                <!-- headline -->
                <TextBlock Text="Welcome to Kanban!"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="SlateGray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- email -->
                <TextBlock Text="Email:"
                           FontSize="16"
                           Foreground="#FF76B6FF"
                           Margin="5,10,0,2"/>
                <TextBox x:Name="txtEmail"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Width="260"
                         Height="34"
                         FontSize="14"
                         Background="#FF9AA4AD"
                         Foreground="Black"
                         BorderBrush="#FFB3D2F5"
                         BorderThickness="2"
                         Padding="5"/>

                <!-- password -->
                <TextBlock Text="Password:"
                           FontSize="16"
                           Foreground="#FF76B6FF"
                           Margin="5,15,0,2"/>
                <PasswordBox x:Name="txtPass"
                             Width="260"
                             Height="34"
                             FontSize="14"
                             Background="#FF9AA4AD"
                             Foreground="Black"
                             BorderBrush="#FFB3D2F5"
                             BorderThickness="2"
                             Padding="5"/>

                <!-- login button -->
                <Button Content="Login"
                        Width="200"
                        Height="40"
                        Margin="0,25,0,0"
                        Background="SteelBlue"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=txtPass}">

                    <!-- rounded corners -->
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>

    </Grid>
</UserControl>
