<Window x:Class="Frontend.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Frontend.ViewModel"
        xmlns:view="clr-namespace:Frontend.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Kanban" Height="620" Width="870"
        Background="LightSlateGray">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
            <view:KanbanLogin/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RegisterViewModel}">
            <view:KanbanRegister/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:MyBoardsViewModel}">
            <view:KanbanMyBoards/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:BoardViewModel}">
            <view:KanbanBoardView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <ContentPresenter Content="{Binding CurrentViewModel}" />
    </Grid>

</Window>